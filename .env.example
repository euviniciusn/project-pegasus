# ── Backend ──
NODE_ENV=development
PORT=3000
LOG_LEVEL=info

# ── PostgreSQL ──
POSTGRES_USER=converter
POSTGRES_PASSWORD=CHANGE_ME
POSTGRES_DB=converter
DATABASE_URL=postgres://converter:CHANGE_ME@postgres:5432/converter
DB_POOL_MIN=2
DB_POOL_MAX=10
DB_STATEMENT_TIMEOUT=10000

# ── Redis ──
REDIS_URL=redis://redis:6379

# ── MinIO (S3-compatible) ──
MINIO_ENDPOINT=minio
MINIO_PORT=9000
MINIO_ACCESS_KEY=CHANGE_ME
MINIO_SECRET_KEY=CHANGE_ME
MINIO_BUCKET=converter
MINIO_USE_SSL=false

# ── Upload ──
MAX_FILE_SIZE=20971520
MAX_FILES_PER_JOB=20
MAX_TOTAL_JOB_SIZE=104857600

# ── Session / Cookies ──
SESSION_TTL=7200
COOKIE_SECRET=CHANGE_ME

# ── Conversion ──
DEFAULT_QUALITY=82
CONVERSION_TIMEOUT=30000
WORKER_CONCURRENCY=4

# ── Presigned URLs ──
PRESIGNED_URL_EXPIRY=3600
MINIO_PUBLIC_URL=http://localhost/storage

# ── CORS ──
ALLOWED_ORIGINS=http://localhost:5173

# ── Frontend (Vite) ──
VITE_API_URL=http://localhost:3000
